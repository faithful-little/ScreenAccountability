<Window x:Class="SimpleAccountability.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Accountability"
        Width="400" Height="270"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA"
        FontFamily="Segoe UI">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Email -->
        <TextBlock Text="Your Gmail id:" 
                   Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtEmail" 
                 Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                 Margin="5" Padding="6"
                 BorderThickness="1" BorderBrush="#CCC" 
                 Background="White" />

        <!-- Password -->
        <TextBlock Text="Password (see Help):" 
                   Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <PasswordBox x:Name="txtPassword" 
                     Grid.Row="1" Grid.Column="1"
                     Margin="5" Padding="6"
                     BorderThickness="1" BorderBrush="#CCC" 
                     Background="White"/>
        <Button Content="Help" 
                Grid.Row="1" Grid.Column="2"
                Click="Help_Click"
                Margin="5,0,0,0" Padding="5,2"
                Width="60" 
                Background="#E0E0E0" 
                BorderBrush="#B0B0B0" 
                FontSize="12" 
                HorizontalAlignment="Left"/>

        <!-- Partner Email -->
        <TextBlock Text="Accountability Partner's Email:" 
                   Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtToEmail" 
                 Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                 Margin="5" Padding="6"
                 BorderThickness="1" BorderBrush="#CCC" 
                 Background="White"/>

        <!-- Frequency -->
        <TextBlock Text="Strength (how often screenshots go):" 
                   Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtFrequency" 
                 Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                 Margin="5" Padding="6"
                 BorderThickness="1" BorderBrush="#CCC" 
                 Background="White"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
            <Button Content="Start" 
                    Click="StartMonitoring_Click" 
                    Width="100" Padding="6"
                    Background="#4CAF50" Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0" 
                    Cursor="Hand"
                    HorizontalAlignment="Right">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.3"/>
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
</Window>
