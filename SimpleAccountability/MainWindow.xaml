<Window x:Class="SimpleAccountability.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screenshot Monitor" Height="340" Width="380">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar with Help icon -->
        <DockPanel Grid.Row="0">
            <TextBlock FontSize="16" FontWeight="Bold"
                       Text="Settings" DockPanel.Dock="Left"/>
            <Button Content="?" Width="25" Height="25"
                    DockPanel.Dock="Right"
                    Click="Help_Click"
                    ToolTip="How to generate a Gmail App Password"/>
        </DockPanel>

        <!-- Settings form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <TextBlock Text="SMTP Username (Gmail):" Margin="0,6,0,0"/>
            <TextBox Name="txtEmail" Margin="0,4,0,0"/>

            <TextBlock Text="SMTP App Password:" Margin="0,8,0,0"/>
            <PasswordBox Name="txtPassword" Margin="0,4,0,0"/>

            <TextBlock Text="Destination Email:" Margin="0,8,0,0"/>
            <TextBox Name="txtToEmail" Margin="0,4,0,0"/>

            <TextBlock Text="Interval (mins):" Margin="0,8,0,0"/>
            <TextBox Name="txtFrequency" Text="10" Margin="0,4,0,0"/>

            <Button Content="Start Monitoring"
                    Click="StartMonitoring_Click"
                    Height="30" Margin="0,12,0,0"/>
        </StackPanel>
    </Grid>
</Window>
